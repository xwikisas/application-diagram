    <property>
      <code>require(['jquery'], function($) {
  var browseResourceSelector = $('#resource-selector-browse');
  var resourceSelector = browseResourceSelector.closest('.resource-selector');
  var tree = browseResourceSelector.find('.xtree').on('changed.jstree', function (e, data) {
    if (data.selected.length &gt; 0) {
      var selectedNode = $(this).jstree(true).get_node(data.selected[0]);
      var resource = getResourceForNode(selectedNode.data);
      if (resource) {
        browseResourceSelector.find('input[name="resourceType"]').val(resource.type);
        browseResourceSelector.find('input[name="resourceReference"]').val(resource.reference);
        return;
      }
    }
    // Empty selection.
    browseResourceSelector.find('input[name="resourceType"], input[name="resourceReference"]').val('');
  });
  resourceSelector.on('xwiki:resourceSelector:select', function(event, resource) {
    var nodeId = getNodeIdForResource(resource);
    if (nodeId) {
      var jsTree = tree.jstree(true);
      jsTree.deselect_all();
      jsTree.close_all();
      jsTree.openTo(nodeId);
    }
  });

  var getNodeIdForResource = function(resource) {
    if (resource.type === 'doc') {
      return 'document:' + resource.reference;
    } else if (resource.type === 'attach') {
      return 'attachment:' + resource.reference;
    }
  };

  var nodeTypeToResourceType = {
    'document': 'doc',
    'attachment': 'attach'
  };
  var getResourceForNode = function(node) {
    var resourceType = nodeTypeToResourceType[node.type];
    if (resourceType) {
      return {type: resourceType, reference: node.id};
    }
  };
});</code>
