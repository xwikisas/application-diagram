## don't have view right on those pages.
#if ($services.licensing.licensor.hasLicensureForEntity($xcontext.macro.doc.documentReference))
  #executeDiagramMacro
#else
  {{error}}
    #getMissingLicenseMessage('diagram.extension.name')
  {{/error}}
#end
{{/velocity}}</code>
